<div class="container" id="booksDiv">
<form  action="/admin/searchbook" method="post" >
  <div class="form-row" id="searchFormDiv">
     <div class="form-group col-md-5">
    

      <input type="text" class="form-control form-control-lg" name ="searchText" placeholder="Enter a title to search">
    </div>
     <div class="form-group col-md-1">
     <input name="bookId" type="hidden" value='{{id}}'> 
    <button type="submit" class="btn btn-danger" name="btnSearch"><i class="fa fa-search"></i></button>
    </div> 
		
    {{! <div class="form-group col-md-6" id ="addButtonDiv"> }}
     
    {{! </div>  }}
  </div> 
  </form>
	 <a href='/admin/addbooks' class="btn  btn-default" role ="button">Add books</a>
</div> 
<br/><br/><br/>
<div class="container" id="booksDiv">
<div class="row">

    <div class="col-xs-8">
<table class="table table-responsive table-bordered table-hover">
						<thead class="thead-light">
							<tr>
								<th scope="col">Image</th>
								<th scope="col">ISBN</th>
								<th scope="col">Title</th>
								<th scope="col">Author</th>
								<th scope="col">Availability</th>
								{{! <th>Description</th>  }}
								<th scope="col">Update</th>
								<th scope="col">Delete</th>
							</tr>
						</thead>
						<tbody>
							
                                {{#books}}
                <tr id="booksTable">
								<td ><img height="100" src='{{imageurl}}' width="100" data-toggle="tooltip" data-placement="bottom" title="{{description}}"></td>
 								<td >{{isbn}}</td>
								<td scope="row">{{title}}</td>
								<td >{{author}}</td>
								<td >{{availability}}</td>
								 {{! <td data-title="description">{{description</td> }}
								<td >
									<a href="/admin/addbooks/{{id}}"><button class="btn btn-default mb-2" id="btnSubmit" type="submit">Update</button></a> 
								</td>
								<td>
									<form action='/admin/deletebook' method='post'>
										<input name="bookId" type="hidden" value='{{id}}'> 
                    <input name="categoryId" type="hidden" value='{{categoryid}}'> 
                    <button type="submit" class="btn btn-danger" name="btnDelete"><i class="fa fa-trash-o" ></i></button>

									</form>
								</td>
							</tr>
																{{/books}}
						</tbody>
		</table>
		</div>
		</div>
		</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript">
